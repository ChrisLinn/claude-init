{
  "name": "claude-init",
  "version": "1.0.38",
  "description": "Initialize Claude development environment with configurations and templates",
  "type": "module",
  "bin": {
    "claude-init": "./bin/index.js"
  },
  "main": "./src/cli.js",
  "files": [
    "bin/",
    "src/",
    "CLAUDE.md",
    ".claude/",
    ".devcontainer/",
    ".devcontainer-rust/",
    ".devcontainer-go/"
  ],
  "scripts": {
    "test": "node --test test/*.test.js",
    "dev": "node bin/index.js",
    "prepublishOnly": "npm test",
    "version": "git add package.json",
    "postversion": "git push && git push --tags && npm publish",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major"
  },
  "keywords": [
    "claude",
    "ai",
    "development",
    "environment",
    "cli",
    "initialization",
    "scaffolding"
  ],
  "author": "ChrisLinn <nanyishanshaoxiu@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "tmp": "^0.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisLinn/claude-init.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisLinn/claude-init/issues"
  },
  "homepage": "https://github.com/ChrisLinn/claude-init#readme",
  "publishConfig": {
    "access": "public"
  }
}
